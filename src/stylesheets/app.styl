html, body
  min-height: 100%

body
  font-family: sans-serif
  background: url('images/galaxy.jpg') no-repeat center center fixed
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover

.headline, .headline a
  color: #fff
  text-align: center
  text-decoration: none

#content
  padding: 20px
  background-color: #fff
  border-radius: 5px
  max-width: 90%
  margin: auto

.commit-nav
  text-align: center

#commit
  overflow: scroll

#older-commit, #newer-commit
  font-size: 24px
  padding: 8px 50px
  background: #9C344C
  color: #fff
  border: none
  border-radius: 5px

.commit-list
  position: absolute
  font-size: 10px
  top: 200px
  right: 0
  width: 200px
  background: rgba(200, 54, 54, 0.5)
